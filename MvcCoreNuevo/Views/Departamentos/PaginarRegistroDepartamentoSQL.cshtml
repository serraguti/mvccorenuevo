@model MvcCoreNuevo.Models.Departamento

@{
    ViewData["Title"] = "PaginarRegistroDepartamentoSQL";
}

<h1>Paginar Departamento SQL</h1>

<h1 style="color:red">
    Registro @ViewData["POSICION"] de @ViewData["ULTIMO"]
</h1>

<ul class="list-group list-group-horizontal">
    <li class="list-group-item">
        <a asp-controller="Departamentos"
           asp-action="PaginarRegistroDepartamentoSQL"
           asp-route-posicion="1">
            Primero
        </a>
    </li>
    <li class="list-group-item">
        <a asp-controller="Departamentos"
           asp-action="PaginarRegistroDepartamentoSQL"
           asp-route-posicion="@ViewData["ANTERIOR"]">
            Anterior
        </a>
    </li>
    <li class="list-group-item">
        <a asp-controller="Departamentos"
           asp-action="PaginarRegistroDepartamentoSQL"
           asp-route-posicion="@ViewData["SIGUIENTE"]">
            Siguiente
        </a>
    </li>
    <li class="list-group-item">
        <a asp-controller="Departamentos"
           asp-action="PaginarRegistroDepartamentoSQL"
           asp-route-posicion="@ViewData["ULTIMO"]">
            Ultimo
        </a>
    </li>
</ul>

<div>
    <h4>Departamento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Número</dt>
        <dd class = "col-sm-10">@Model.Numero</dd>
        <dt class = "col-sm-2">Nombre</dt>
        <dd class = "col-sm-10">@Model.Nombre</dd>
        <dt class = "col-sm-2">Localidad</dt>
        <dd class = "col-sm-10">@Model.Localidad</dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>
