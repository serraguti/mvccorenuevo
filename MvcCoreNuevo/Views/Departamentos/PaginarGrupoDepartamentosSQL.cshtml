@model IEnumerable<MvcCoreNuevo.Models.Departamento>

@{
    ViewData["Title"] = "PaginarGrupoDepartamentosSQL";
}

<h1>Paginar Departamentos SQL</h1>

@{ 
    int numeroregistros = (int)ViewData["NUMEROREGISTROS"];
    int numeropagina = 1;
}
<ul class="list-group list-group-horizontal">
    @for (int i = 1; i <= numeroregistros; i += 2)
    {
        <li class="list-group-item">
            <a asp-controller="Departamentos"
               asp-action="PaginarGrupoDepartamentosSQL"
               asp-route-posicion="@i">
                @numeropagina
            </a>
        </li>
        numeropagina += 1;
    }
</ul>

<table class="table table-danger">
    <thead>
        <tr>
            <th>Número</th>
            <th>Nombre</th>
            <th>Localidad</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Numero</td>
            <td>@item.Nombre</td>
            <td>@item.Localidad</td>
        </tr>
}
    </tbody>
</table>
