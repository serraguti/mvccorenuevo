@{
    String usuario = Context.Session.GetString("USERNAME");
}

@if (usuario == null)
{
    <li class="nav-item">
        <a asp-action="LogIn" class="nav-item"
           asp-controller="Home">
            Log In Usuario
        </a>
    </li>
}
else
{
    <li class="nav-item">
        <a asp-action="CloseSession" class="nav-item"
           asp-controller="Home">
            Sign Out @usuario
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#">Perfil</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#">Pedidos</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#">Comentarios</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#">Modificar Datos</a>
    </li>
}




